---
import '@/styles/globals.css';
import Navbar from '@/components/Navbar.astro';
import CustomCard from '@/components/ui/CustomCard';
import Reviews from '@/components/Reviews';

const highlights = [
  { title: "Professional Experience", description: "Over 8 years of teaching experience with numerous awards." },
  { title: "Personalized Lessons", description: "Tailored lessons to fit individual needs and preferences." },
  { title: "Wide Range of Styles", description: "Specializes in classical, jazz, and contemporary piano." },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Piano Lessons with [Your Name]</title>
</head>
<body class="bg-black text-white overflow-x-hidden">
  <Navbar />

  <div class="hero flex justify-between items-center h-screen px-8">
    <div class="hero-text max-w-2/3">
      <h1 class="text-8xl font-bold mb-4">"Piano is the language of <span class="text-gradient">emotions</span>."</h1>
      <p class="text-4xl">Learn the Language of the Piano</p>
    </div>
    <img src="path/to/your/image.jpg" alt="Piano Image" class="w-1/3 rounded-lg shadow-lg">
  </div>

  <main class="px-8 py-16 w-full">
    <section id="intro" class="mb-12">
      <h2 class="text-4xl mb-4">About Me</h2>
      <CustomCard title="Hello! I am [Your Name]">
        <p>A passionate piano teacher with over 8 years of experience. I have achieved numerous awards for my performances and have been actively performing across the Bay Area...</p>
        <button class="bg-highlight-color text-black mt-4">Read More</button>
      </CustomCard>
    </section>

    <section id="experience" class="mb-12">
      <h2 class="text-4xl mb-4">My Experience</h2>
      <CustomCard title="Experience">
        <p>I have taught piano for over 8 years, specializing in various styles and genres...</p>
      </CustomCard>
    </section>

    <section id="highlights" class="mb-12">
      <h2 class="text-4xl mb-4">Highlights</h2>
      <div class="flex flex-wrap -mx-4">
        {highlights.map((highlight) => (
          <div class="w-full md:w-1/3 px-4 mb-8">
            <CustomCard title={highlight.title}>
              <p>{highlight.description}</p>
            </CustomCard>
          </div>
        ))}
      </div>
    </section>

    <section id="quotes" class="mb-12">
      <h2 class="text-4xl mb-4">Inspirational Quotes</h2>
      <div class="quote-screen flex items-center justify-center h-screen">
        <div class="quote-text text-5xl font-bold">"Music is the universal language of mankind."</div>
        <div class="quote-author text-2xl ml-4">- Henry Wadsworth Longfellow</div>
      </div>
      <div class="quote-screen flex items-center justify-center h-screen">
        <div class="quote-text text-5xl font-bold">"Without music, life would be a mistake."</div>
        <div class="quote-author text-2xl ml-4">- Friedrich Nietzsche</div>
      </div>
    </section>

    <!-- Calendly inline widget begin -->
    <div class="calendly-inline-widget" data-url="https://calendly.com/amaarmc/piano?hide_event_type_details=1&hide_gdpr_banner=1" style="min-width:320px;height:700px;"></div>
    <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
    <!-- Calendly inline widget end -->

    <section id="reviews" class="mb-12 w-full">
      <h2 class="text-4xl mb-4">Student Reviews</h2>
      <Reviews />
    </section>
  </main>

  <footer class="bg-glass bg-opacity-10 backdrop-blur border-t border-glass py-4 text-center">
    <p>&copy; 2024 Piano Lessons with [Your Name]. All rights reserved.</p>
  </footer>
  <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
</body>
</html>
